{
  "manifest_version": 3,
  "name": "Guardian Crossword Helper",
  "description": "Keyboard Shortcuts for the Guardian Crossword",
  "version": "1.0",
  "options_ui": {
    "page": "options.html"
  },
  "action": {
    "default_icon": {
      "152": "favicon.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "js/vendor.js"
      ]
    },
    {
      "matches": [
        "https://www.theguardian.com/crosswords/*"
      ],
      "js": [
        "js/content.js"
      ]
    }
  ]
}